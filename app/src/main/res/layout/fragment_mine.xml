<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/mine_frame"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/lightgray">
        <ImageView
            android:id="@+id/mine_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <com.charles.heartfreshfood.wiget.CircleHeadView
            android:id="@+id/user_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/mine_login"
            android:background="@color/transparent"
            android:src="@drawable/icon_login_mine"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:visibility="visible"/>
    </FrameLayout>

    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/mine_balancebtn"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:background="@color/white"
            android:gravity="center_horizontal">
            <TextView
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="账户余额"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/mine_balance"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:text="0.00元"
                android:textSize="20sp"/>
        </RelativeLayout>
        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@color/mediumtgray"/>
        <RelativeLayout
            android:id="@+id/mine_rechargebtn"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="0张"
                android:textSize="20sp"
                android:textColor="@color/green"
                android:layout_alignParentTop="true"/>
            <TextView
                android:text="我的优惠券"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/mediumtgray"/>
        <RelativeLayout
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:text="我的积分"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="0分"
                android:textColor="@color/orange"
                android:textSize="20sp"
                android:layout_alignParentTop="true"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mine_linear"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/mine_order"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/icon_mine_pic2"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="?android:attr/listDivider"/>
        <Button
            android:id="@+id/mine_comment"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/icon_mine_pic3"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="?android:attr/listDivider"/>
        <Button
            android:id="@+id/mine_address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/icon_mine_pic4"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="?android:attr/listDivider"/>
        <Button
            android:id="@+id/mine_setting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/icon_setting"/>
    </LinearLayout>
</LinearLayout>
