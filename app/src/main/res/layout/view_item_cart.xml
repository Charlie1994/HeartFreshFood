<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@color/white">

    <ImageView
        android:id="@+id/view_cart_item_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/view_cart_item_productname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/view_cart_item_img"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/view_cart_item_specification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/view_cart_item_img"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="45dp"/>
    <TextView
        android:id="@+id/view_cart_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/view_cart_item_img"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:textSize="26sp"
        android:textColor="@color/orange"/>
    <!-- 产品数量控制条-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="5dp">
        <ImageButton
            android:id="@+id/view_cart_item_minus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_cart_minus"
            android:background="#00000000"/>
        <TextView
            android:id="@+id/view_cart_item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="1"/>
        <ImageButton
            android:id="@+id/view_cart_item_plus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_cart_plus"
            android:background="#00000000"/>

    </LinearLayout>
</RelativeLayout>