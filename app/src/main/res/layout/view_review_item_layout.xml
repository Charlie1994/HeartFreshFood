<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:background="@color/white">
    <com.charles.heartfreshfood.wiget.CircleHeadView
        android:id="@+id/view_review_item_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"/>
    <RatingBar
        android:id="@+id/view_review_item_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        style="@style/WidgetRatingBarSmall"
        android:numStars="5"
        android:isIndicator="true"
        android:rating="1.0"
        android:max="5"
        android:layout_marginTop="33dp"/>
    <TextView
        android:id="@+id/view_review_item_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/view_review_item_content"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:paddingEnd="15dp"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/view_review_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textColor="@color/gray"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"/>
</RelativeLayout>