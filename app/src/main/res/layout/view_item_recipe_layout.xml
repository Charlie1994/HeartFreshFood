<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="280dp">
    <TextView
        android:id="@+id/view_item_recipe_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginTop="200dp"
        android:layout_marginStart="20dp"/>
    <TextView
        android:id="@+id/view_item_recipe_collectnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"/>
    <ImageView
        android:id="@+id/view_item_recipe_titleimg"
        android:layout_marginTop="10dp"
        android:layout_width="330dp"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:layout_height="180dp"/>
    <com.charles.heartfreshfood.wiget.CircleHeadView
        android:id="@+id/view_item_recipe_userimg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="70dp"/>
    <TextView
        android:id="@+id/view_item_recipe_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="45dp"/>
</RelativeLayout>