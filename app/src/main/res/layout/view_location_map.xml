<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/lightgray">

    <TextView
        android:id="@+id/view_location_map_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:textSize="24sp"/>
    <TextView
        android:id="@+id/view_location_map_addressdetail"
        android:textSize="14sp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/view_location_map_rate"/>
    <RatingBar
        android:id="@+id/view_location_map_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/view_location_map_name"
        style="?android:attr/ratingBarStyleSmall"/>
    <Button
        android:id="@+id/view_location_map_go"
        android:background="@drawable/meterial_menu_bg"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/view_location_map_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_toLeftOf="@id/view_location_map_go"
        android:text="msdinsd"/>
</RelativeLayout>